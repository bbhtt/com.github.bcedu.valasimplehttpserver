{
    "app-id": "com.github.bcedu.valasimplehttpserver",
    "runtime": "org.gnome.Platform",
    "runtime-version" : "3.30",
    "base" : "io.elementary.BaseApp",
    "base-version" : "juno",
    "sdk": "org.gnome.Sdk",
    "command": "com.github.bcedu.valasimplehttpserver",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=home",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro"
    ],
    "modules": [
        {
            "name": "VServer",
            "buildsystem": "meson",
            "config-opts": ["-Dlibunity=false", "-Dubuntu-bionic-patched-vte=false"],
            "sources": [
                {
                    "type" : "git",
                    "url" : "https://github.com/bcedu/ValaSimpleHTTPServer.git",
                    "commit" : "74b3e3b5ae2380f3a4027f4ecfa9cc734abf4f97" 
                }
            ]
        }
    ]
}

